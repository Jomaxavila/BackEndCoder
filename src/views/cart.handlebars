      {{#each cartProducts}}
  <div class="col-md-4">
    <div class="card mb-4 h-100">
      <img
        src="{{product.thumbnail}}"
        style="width: 100%; max-height: 200px; object-fit: contain;"
        class="img-fluid rounded mx-auto d-block mt-3 mx-auto my-auto"
        alt="Product Image"
      />
      <div class="card-body text-center">
        <h5 class="card-title">{{product.title}}</h5>
        <p class="card-text">{{product.description}}</p>
        <p class="card-text">{{product.category}}</p>
        <p class="card-text">$USD {{product.price}}</p>
        <p class="card-text">Cantidad:  {{quantity}}</p> <!-- Modificado para mostrar la cantidad del carrito -->
        <form action="/cart/purchase/{{user.cartId}}" method="POST">
          <button type="submit" class="btn btn-primary m-2">Realizar Compra</button>
        </form>
      </div>
    </div>
  </div>
