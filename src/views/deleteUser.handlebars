<h1 class="m-5 text-center">Lista de Usuarios no activos</h1>
<section class="mt-6">
  <div class="container">
    <div class="row justify-content-center">
      {{#each users}}
      <div class="mt-5 col-md-4">
        <div class="card mb-4 h-100">
          <div class="card-body text-center">
            <h5 class="card-title">{{first_name}} {{last_name}}</h5>
            <p class="card-text">{{email}}</p>
            <p class="card-text">{{role}}</p>
            <form id="form-eliminar-usuario" action="/api/users/delete" method="POST">
              <input type="hidden" id="email" name="email" value="{{email}}">
              <button type="button" class="btn btn-danger btn-eliminar-usuario" data-email="{{email}}">Eliminar
                Usuario</button>
            </form>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>

