<script>// Utiliza una clase para seleccionar todos los botones y vincula el evento 'click' a cada uno
document.querySelectorAll('.btn-eliminar-usuario').forEach(function(button) {
   button.addEventListener('click', function(event) {
     // Usa el atributo de datos para obtener el email asociado con el botÃ³n que fue clickeado
     var email = this.getAttribute('data-email');
     fetch('/api/users/delete', {
       method: 'DELETE',
       headers: {
         'Content-Type': 'application/json',
       },
       body: JSON.stringify({
         email: email
       })
     }).then(response => {
       if (response.ok) {
         console.log('Usuario eliminado');
         window.location.href = window.location.href;
         // AquÃ­ podrÃ­as tambiÃ©n eliminar la tarjeta del usuario del DOM o refrescar la pÃ¡gina
       } else {
         console.log('Error al eliminar el usuario');
       }
     }).catch(error => {
       console.error('Hubo un problema con la operaciÃ³n fetch: ' + error.message);
     });
   });
 });</script>